<div class="container">
  <h2> Vložte nový produkt </h2>
  <%= simple_form_for @product do |f| %>
    <div class="form-inputs">
      <%= f.input :name, label: 'Název Produktu', required: :true %>
      <%= f.input :description, as: :text, required: :true %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
      </div>
<% end %>
</div>